    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "size": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "string",
      "required": true
    },
    "qty": {
      "type": "integer",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "style": {
      "type": "string",
      "required": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "product": {
      "model": "product",
      "via": "variants"
    }
  }
